@model Classes.SearchPersonelExpense
@{
    ViewBag.Title = "ViewPersonelExpense";
    Layout = "~/Views/Shared/_DashboardMenu.cshtml";
}
<style>
    .modal-content {
        position: relative;
        height: 154px !important;
    }

    .titleText {
        text-align: center;
    }

    #comErrMsg, .pull-left {
        text-align: center;
    }

    .errMsgSrch {
        color: red;
    }
</style>
<div class="modal fade" id="modalExpense">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title titleText"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i></h4>
            </div>
            <div class="modal-body">
                <p id="comErrMsg"></p>
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">OK</button>
            </div>           
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">View Expense by Product</h3>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.DropDownListFor(a => a.ProductId, new SelectList(Model.Product, "Id", "Name"), "Select Products", new { @class = "form-control select2", @Id = "ddlproduct" })
                            </div>
                            <div class="col-sm-2">
                                <button class="btn" id="btnSubmitPro"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">                               
                                <p class="errMsgSrch" id="srchErr"></p>
                            </div>
                        </div>
                        <div id="loadExpbyProduct">
                            @Html.Partial("_LoadExpenseByProduct", Model.expense)
                        </div>
                       
                    </div>
                    <!-- /.box-body -->
                </div>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">View Expense by Date</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.TextBoxFor(a => a.fromDate, new { @Id = "txtFromdate", @Placeholder = "From Date", @class = "form-control" })
                                <p></p>
                                @Html.TextBoxFor(a => a.toDate, new { @Id = "txtTodate", @Placeholder = "To Date", @class = "form-control" })
                            </div>
                            <div class="col-sm-2">
                                <button class="btn" id="btnSubmitDate"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Search</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10">
                                <p class="errMsgSrch" id="srchErrDate"></p>
                            </div>
                        </div>
                        <div id="loadExpbyDate">
                            @Html.Partial("_LoadExpenseByDate", Model.expense)
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts{
    <script src="~/Scripts/Search/SearchPersonelExpense.js"></script>
}
